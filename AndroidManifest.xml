<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="org.pcsoft.android.andro_crypt"
          android:versionCode="1"
          android:versionName="1.0.0-SNAPSHOT"
          android:installLocation="preferExternal">
    <uses-sdk android:minSdkVersion="19"/>

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_INTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_INTERNAL_STORAGE"/>

    <application android:icon="@drawable/ic_launcher" android:label="@string/app_name"
                 android:name="AndroCryptApplication_"
                 android:theme="@android:style/Theme.Holo.Light">
        <activity android:name=".ui.activity.MainActivity_">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".ui.activity.SecureGroupActivity_"
                  android:parentActivityName=".ui.activity.MainActivity_"/>
        <activity android:name=".ui.activity.PreferenceActivity_"/>

        <provider android:authorities="org.pcsoft.android.andro_crypt" android:name=".provider.SecureContentProvider"
                  android:exported="true"/>
    </application>

</manifest>